<h1 style="color: white; margin-left: 20px;"><u>COMMENTS:</u></h1>
<div class="comments">
    <% 
    if (typeof comments != 'undefined' && comments != null) {
            comments.forEach( function ( commentData ){
                    %>
                <h3> <%= commentData.comment %> </h3>
                    <% });
                } %>

</div>
